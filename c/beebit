{
  #ifdef __DEBUG__
    FILE *hfile;
  #endif
  /*#ifdef __DEVELOP__
      fclose(htrace);
  #else
    #ifdef __DEBUG__
      fclose(htrace);
    #endif
  #endif*/
  /*#ifdef __DEBUG__
    hfile = fopen("<BeebIt$Dir>.DUMP","wb");
    fwrite(memory,1,0x10000,hfile);
    fclose(hfile);
    hfile = fopen("<BeebIt$Dir>.SCREEN","wb");
    fwrite(memory+video_startaddress,1,0x2800,hfile);
    fclose(hfile);
  #endif*/

  i8271closedown();

  /*free space for screen buffer sprite*/
  spritefree();
}

