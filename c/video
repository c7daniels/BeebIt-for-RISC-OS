  int video_n,video_n1;

  uscreen = (uint32_t*)naddress;
  if (hmap->acccon & beebit_vdusel)
    mem = (unsigned char*)hmap->shadow;
  else
    mem = (unsigned char*)hmap->memory;

  for (; n>=16; n-=6)
  {
    video_n = mem[video_address];
    /*&08 &04 &02 &01*/
    video_n1 = videoula_palette[((video_n & 0x80)>>4) | ((video_n & 0x20)>>3) | ((video_n & 0x08)>>2) | ((video_n & 0x02)>>1)];
    *uscreen++ = (video_n1<<24) | (video_n1<<16) | (video_n1<<8) | video_n1;
    *uscreen++ = (video_n1<<24) | (video_n1<<16) | (video_n1<<8) | video_n1;
    /*&08 &04 &02 &01*/
    video_n1 = videoula_palette[((video_n & 0x40)>>3) | ((video_n & 0x10)>>2) | ((video_n & 0x04)>>1) | (video_n & 0x01)];
    *uscreen++ = (video_n1<<24) | (video_n1<<16) | (video_n1<<8) | video_n1;
    *uscreen++ = (video_n1<<24) | (video_n1<<16) | (video_n1<<8) | video_n1;
    video_address += 8;
    if (video_address >= 0x8000)
    {
      video_address &= 0x7FFF;
      video_address += hmap->screenstartaddress;
    }
  }
}

void roundteletextalpha(intptr_t naddress, intptr_t nupperhalfaddress, intptr_t nlowerhalfaddress)
{
  int i;
  for (i=0; i<20; i++)
  {
    ((uint32_t*)nupperhalfaddress)[i] = ((uint32_t*)naddress)[i];
    ((uint32_t*)nlowerhalfaddress)[i] = ((uint32_t*)naddress)[i];
  }
}
