  R6502_LINEAR_MODIFY_ABS_OPCODE_FINISH

|r6502lseabsxroutine|
  R6502_OPCODE_PUSH
  R6502_LINEAR_MODIFY_ABSX_OPCODE_START r6502lse
  LSE_ACTION
  R6502_LINEAR_MODIFY_ABS_OPCODE_FINISH

|r6502lse|
  LSE_ACTION
  MOV pc,lr

|r6502lsr|
  LSR_ACTION
  MOV pc,lr


