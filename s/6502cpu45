|r6502cliroutine|
  R6502_OPCODE_PUSH
  R6502_OPERAND_READ_BRANCH r6502cli_p1
  LDRB r4,[r1]
  R6502_OPCODE_CYCLES 2,0
  CLI_SHIFTED_ACTION
  ADD r7,r7,#1:SHL:16
  B r6502opcodeinterruptfetchreturn
s2_r6502cli_p1
  R6502_OPCODE_CYCLES 0,2
  B sc_r6502cli_p1
s1_r6502cli_p1
  R6502_OPCODE_CYCLES 0,1
sc_r6502cli_p1
  R6502_OPCODE_READ_SPECIAL
  R6502_OPCODE_CYCLES 1,1
  CLI_ACTION
  ADD r7,r7,#1:SHL:16
  B s_r6502interruptfetch_p
s_r6502cli_p1
  R6502_OPCODE_READ_SPECIAL
  R6502_OPCODE_CYCLES 1,0
  CLI_ACTION
  ADD r7,r7,#1:SHL:16
  B s_r6502interruptfetch_p

