|r6502opcode73|
  ;RRA
  ;STMFD sp!,{r0-r12,lr}
  ADDRESSOFPOSTINDEXEDY_B ;r0 ;3+ cycles
  MOV r2,r0 ;store address
  READMEMB ;1 cycle
  R6502ROR r0 ;2 cycles
  MOV r1,r0 ;value
  MOV r0,r2 ;address
  WRITEMEMB ;1 cycle

  ANDS r1,rps,#DFLAG
  BNE r6502opcode73_2
  ;digital
  R6502ADC ;1 cycle
  CPU_CYCLES 5
  ;LDMFD sp!,{r0-r12,pc}
  ;MOV pc,lr
  R6502NEXTOPCODE
