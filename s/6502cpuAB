|r6502opcodeB7|
  ;LAX
  ;STMFD sp!,{r0-r2,rpc-r12,lr}
  ADDRESSOFZEROPAGEY
  LDRB ra,[r12,r0] ;r0=ra
  ;LDR r11,=r6502_a
