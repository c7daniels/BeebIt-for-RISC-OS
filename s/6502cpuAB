|r6502opcodeA8|
  ;TAY
  ;STMFD sp!,{r0-r2,rps,r12,lr}
  ;LDR r12,=r6502_a
  ;LDRB r0,[r12]
  ;LDR r12,=r6502_y
  ;STRB r0,[r12]
  MOVS ry,ra
  ;LDR r12,=r6502_ps
  ;LDRB rps,[r12] ;load ps
  SETZFLAG0 ;ry
  SETNFLAG ry
  ;STRB rps,[r12]
  CPU_CYCLES 2
  ;LDMFD sp!,{r0-r2,rps,r12,pc}
  ;MOV pc,lr
  R6502NEXTOPCODE

