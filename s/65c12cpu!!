;// IMPLIED STEPS
|r65c12fastnopstep|
  R6502_CYCLE_UPDATE_PUSH
  ADD r1,r7,#1:SHL:16
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_FETCH_RETURN

|r65c12pulledxstep|
  R6502_CYCLE_UPDATE_PUSH
  LDRB r2,[r0,#:INDEX:R6502_M]
  BIC r8,r8,#NFLAG|ZFLAG
  MOVS r3,r2,LSL #24
  ORRMI r8,r8,#NFLAG
  STRB r2,[r0,#:INDEX:R6502_X]
  ORREQ r8,r8,#ZFLAG
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_IMPLIED_INTERRUPT_CHECK_FETCH_RETURN

|r65c12pulledystep|
  R6502_CYCLE_UPDATE_PUSH
  LDRB r2,[r0,#:INDEX:R6502_M]
  BIC r8,r8,#NFLAG|ZFLAG
  MOVS r3,r2,LSL #24
  ORRMI r8,r8,#NFLAG
  STRB r2,[r0,#:INDEX:R6502_Y]
  ORREQ r8,r8,#ZFLAG
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_IMPLIED_INTERRUPT_CHECK_FETCH_RETURN

;// LOAD STEPS
|r65c12sumtoimmediatestep|
  R6502_CYCLE_UPDATE_PUSH
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ADD r1,r7,#1:SHL:16
  STR r1,[r0,#:INDEX:R6502_LAST_PC_CODE]
  STR r1,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_READ_RETURN

|r65c12tozpgstep|
  R6502_CYCLE_UPDATE_PUSH
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ADD r1,r7,#1:SHL:16
  LDR r2,[r0,#:INDEX:R6502_M_SHIFT]
  STR r1,[r0,#:INDEX:R6502_LAST_PC_CODE]
  STR r2,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_READ_RETURN

|r65c12sumloadzpgstep|
  R6502_CYCLE_UPDATE_PUSH
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDR r1,[r0,#:INDEX:R6502_M_SHIFT]
  MOV r3,#ADDRESSING_BASEFLAG
  ADD r2,r7,#1:SHL:16
  ORR r3,r3,r1,LSR #8
  STR r2,[r0,#:INDEX:R6502_LAST_PC_CODE]
  STR r3,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_ZPG_READ_RETURN

|r65c12sumlatchabslostep|
  R6502_CYCLE_UPDATE_PUSH
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ADD r1,r7,#2:SHL:16
  LDRB r2,[r0,#:INDEX:R6502_M]
  STR r1,[r0,#:INDEX:R6502_LAST_PC_CODE]
  STR r1,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  STRB r2,[r0,#:INDEX:R6502_LATCH+2]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_READ_RETURN

|r65c12breadcrumbloadabstomodifystep|
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDRB r1,[r0,#:INDEX:R6502_M]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ORR r1,r2,r1,LSL #24
  MOV r2,#0
  ORR r1,r1,#ADDRESSING_BASEFLAG
  STRB r2,[r0,#:INDEX:R6502_MODIFYOUTOFPAGE]
  STR r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12sumlatchzpgindlostep|
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDR r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  MOV r3,#ADDRESSING_BASEFLAG
  ADD r1,r1,#1:SHL:24
  LDRB r2,[r0,#:INDEX:R6502_M]
  ORR r3,r3,r1,LSR #8
  STRB r2,[r0,#:INDEX:R6502_LATCH+2]
  STR r3,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  R6502_CYCLE_ZPG_READ_RETURN

|r65c12sumloadzpgxstep|
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDR r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  LDRB r2,[r0,#:INDEX:R6502_X]
  MOV r3,#ADDRESSING_BASEFLAG
  ADD r1,r1,r2,LSL #24
  ORR r3,r3,r1,LSR #8
  STR r3,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  R6502_CYCLE_ZPG_READ_RETURN

|r65c12sumloadzpgindstep|
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDRB r1,[r0,#:INDEX:R6502_M]
  LDR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  MOV r3,r3,LSR #8
  ORR r1,r2,r1,LSL #24
  ORR r3,r3,#ADDRESSING_BASEFLAG
  ORR r1,r1,#ADDRESSING_BASEFLAG
  STR r3,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12breadcrumbloadfullabsxstep|
  LDRB r3,[r0,#:INDEX:R6502_X]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  LDRB r3,[r0,#:INDEX:R6502_M]
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ADD r3,r2,r3,LSL #24
  ORR r1,r3,#ADDRESSING_BASEFLAG
  STR r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12sumloadabsxstep|
  LDRB r3,[r0,#:INDEX:R6502_X]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADDEQ r1,r1,#1:SHL:2
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  LDRNE r1,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12sumloadabsystep|
  LDRB r3,[r0,#:INDEX:R6502_Y]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADDEQ r1,r1,#1:SHL:2
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  LDRNE r1,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12loadabsxtomodifystep|
  LDRB r3,[r0,#:INDEX:R6502_X]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADDEQ r1,r1,#1:SHL:2
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  MOVEQ r2,#0
  MOVNE r2,#1
  LDRNE r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  MOVEQ r1,r3
  STRB r2,[r0,#:INDEX:R6502_MODIFYOUTOFPAGE]
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12loadabsxstep|
  LDRB r3,[r0,#:INDEX:R6502_X]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADDEQ r1,r1,#1:SHL:2
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  LDRNE r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12loadabsystep|
  LDRB r3,[r0,#:INDEX:R6502_Y]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADDEQ r1,r1,#1:SHL:2
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  LDRNE r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12sumloadzpgindystep|
  LDRB r3,[r0,#:INDEX:R6502_Y]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADDEQ r1,r1,#1:SHL:2
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  LDRNE r1,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12loadzpgindystep|
  LDRB r3,[r0,#:INDEX:R6502_Y]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADDEQ r1,r1,#1:SHL:2
  ADD r3,r2,r3,LSL #24
  LDRNE r2,[r0,#:INDEX:R6502_ADDRESS_CODE]
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  MOVNE r1,#ADDRESSING_BASEFLAG
  ORR r3,r3,#ADDRESSING_BASEFLAG
  ORRNE r1,r1,r2,LSR #8
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12linearloadabsxstep|
  LDRB r3,[r0,#:INDEX:R6502_X]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  LDRNE r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12linearloadabsystep|
  LDRB r3,[r0,#:INDEX:R6502_Y]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADD r3,r2,r3,LSL #24
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ORR r3,r3,#ADDRESSING_BASEFLAG
  LDRNE r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12linearloadzpgindystep|
  LDRB r3,[r0,#:INDEX:R6502_Y]
  LDR r2,[r0,#:INDEX:R6502_LATCH]
  ADD r2,r2,r3,LSL #16
  TST r2,#1:SHL:24
  LDRB r3,[r0,#:INDEX:R6502_M]
  ADD r3,r2,r3,LSL #24
  LDRNE r2,[r0,#:INDEX:R6502_ADDRESS_CODE]
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  MOVNE r1,#ADDRESSING_BASEFLAG
  ORR r3,r3,#ADDRESSING_BASEFLAG
  ORRNE r1,r1,r2,LSR #8
  MOVEQ r1,r3
  STR r3,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_READ_RETURN

|r65c12bitimmediatestep|
  R6502_CYCLE_UPDATE_PUSH
  LDRB r1,[r0,#:INDEX:R6502_A]
  LDRB r2,[r0,#:INDEX:R6502_M]
  TST r1,r2
  BICNE r8,r8,#ZFLAG
  ORREQ r8,r8,#ZFLAG
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_ADDRESSED_INTERRUPT_CHECK_FETCH_RETURN

|r65c12adcstep|
  R6502_CYCLE_UPDATE_PUSH
  LDR r2,[r0,#:INDEX:R6502_M_SHIFT]
  TST r8,#DFLAG
  BNE r65c12adcstepD
  LDRB r1,[r0,#:INDEX:R6502_A]
  TEQ r2,r8,LSR #1   ;jdl** ARM c =6502 c
  SUB r1,r1,#1:SHL:8
  BIC r8,r8,#NFLAG|VFLAG|ZFLAG|CFLAG
  ADCS r1,r2,r1,ROR #8
  ORRMI r8,r8,#NFLAG
  ORRVS r8,r8,#VFLAG
  ORRCS r8,r8,#CFLAG
  MOVS r1,r1,LSR#24 ;(a=(a>>24) jdl** also (z=(a=0))
  ORREQ r8,r8,#ZFLAG
  STRB r1,[r0,#:INDEX:R6502_A]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_ADDRESSED_INTERRUPT_CHECK_FETCH_RETURN
r65c12adcstepD
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDRB r1,[r0,#:INDEX:R6502_A]
  TEQ r2,r8,LSR #1   ;jdl** ARM c =6502 c
  ORR r1,r1,r1,ROR #8
  ORR r2,r2,#&000FF000
  AND r1,r1,#&F000000F
  ORR r2,r2,#&00000FF0
  ADD r1,r1,#6
  ORR r2,r2,r2,ROR #24
  BIC r8,r8,#NFLAG|VFLAG|ZFLAG|CFLAG
  ADCS r1,r1,r2
  ORRMI r8,r8,#NFLAG
  ORRVS r8,r8,#VFLAG
  CMPCC r1,#&A0000000
  SUB r2,r1,#6
  ADDCS r1,r1,#&60000000
  ORRCS r8,r8,#CFLAG
  TST r1,#&80
  SUBNE r1,r1,#6
  AND r1,r1,#&F000000F
  TST r2,#&F000000F
  ORR r1,r1,r1,LSR #24
  ORREQ r8,r8,#ZFLAG
  STRB r1,[r0,#:INDEX:R6502_A]
  LDR r1,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_READ_RETURN

|r65c12sbcstep|
  R6502_CYCLE_UPDATE_PUSH
  LDR r2,[r0,#:INDEX:R6502_M_SHIFT]
  TST r8,#DFLAG
  BNE r65c12sbcstepD
  LDRB r1,[r0,#:INDEX:R6502_A]
  TEQ r2,r8,LSR #1   ;jdl** ARM c =6502 c
  BIC r8,r8,#NFLAG|VFLAG|ZFLAG|CFLAG
  RSCS r1,r2,r1,ROR #8
  ORRMI r8,r8,#NFLAG
  ORRVS r8,r8,#VFLAG
  ORRCS r8,r8,#CFLAG
  MOVS r1,r1,LSR#24 ;(a=(a>>24) jdl** also (z=(a=0))
  ORREQ r8,r8,#ZFLAG
  STRB r1,[r0,#:INDEX:R6502_A]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_ADDRESSED_INTERRUPT_CHECK_FETCH_RETURN
r65c12sbcstepD
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDRB r1,[r0,#:INDEX:R6502_A]
  TEQ r2,r8,LSR #1   ;jdl** ARM c =6502 c
  ORR r2,r2,r2,ROR #24
  ORR r1,r1,r1,ROR #8
  AND r2,r2,#&F000000F
  AND r1,r1,#&F000000F
  MVN r2,r2
  BIC r8,r8,#NFLAG|VFLAG|ZFLAG|CFLAG
  ADCS r1,r1,r2
  ORRCS r8,r8,#CFLAG
  ORRMI r8,r8,#NFLAG
  ORRVS r8,r8,#VFLAG
  MOV r2,r1
  SUBCC r1,r1,#&60000000
  TST r1,#&80
  ADDNE r1,r1,#&F000000A
  AND r1,r1,#&F000000F
  TST r2,#&F000000F
  ORR r1,r1,r1,LSR #24
  ORREQ r8,r8,#ZFLAG
  STRB r1,[r0,#:INDEX:R6502_A]
  LDR r1,[r0,#:INDEX:R6502_DECIMALFLAGS_ADDRESS_CODE]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_READ_RETURN

|r65c12decimalflagsstep|
  R6502_CYCLE_UPDATE_PUSH
  LDRB r1,[r0,#:INDEX:R6502_A]
  BIC r8,r8,#NFLAG|ZFLAG
  MOVS r1,r1,LSL #24
  ORRMI r8,r8,#NFLAG
  ORREQ r8,r8,#ZFLAG
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_ADDRESSED_INTERRUPT_CHECK_FETCH_RETURN

|r65c12skbstep|
  R6502_CYCLE_UPDATE_PUSH
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ADD r1,r7,#1:SHL:16
  STR r1,[r0,#:INDEX:R6502_LAST_PC_CODE]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_READ_RETURN

|r65c12skwlostep|
  R6502_CYCLE_UPDATE_PUSH
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  ADD r1,r7,#2:SHL:16
  STR r1,[r0,#:INDEX:R6502_LAST_PC_CODE]
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_READ_RETURN

|r65c12waitstep|
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDR r1,[r0,#:INDEX:R6502_LAST_PC_CODE]
  R6502_CYCLE_READ_RETURN

;// MODIFY STEPS
|r65c12tozpgmodifystep|
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDR r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_ZPG_READ_RETURN

|r65c12tomodifystep|
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  LDR r1,[r0,#:INDEX:R6502_ADDRESS_CODE]
  R6502_CYCLE_DISCARD_RETURN

|r65c12modifyskipstep|
  LDRB r2,[r0,#:INDEX:R6502_MODIFYOUTOFPAGE]
  TST r2,r2
  BNE r65c12modifyskipstep2
  R6502_CYCLE_ADDRESSED_FETCH_RETURN
r65c12modifyskipstep2
  R6502_CYCLE_ADDRESSED_INTERRUPT_CHECK_FETCH_RETURN

|r65c12decastep|
  R6502_CYCLE_UPDATE_PUSH
  LDR r2,[r0,#:INDEX:R6502_A_SHIFT]
  BIC r8,r8,#NFLAG|ZFLAG
  SUBS r2,r2,#1:SHL:24
  ORRMI r8,r8,#NFLAG
  STR r2,[r0,#:INDEX:R6502_A_SHIFT]
  ORREQ r8,r8,#ZFLAG
  R6502_CYCLE_UPDATE_POP
  R6502_CYCLE_IMPLIED_INTERRUPT_CHECK_FETCH_RETURN

