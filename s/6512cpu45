  ;STRB rsp,[r10] ;store r6502_sp

  ;LDR r10,=r6502_ps ;pointer to r6502_ps
  ;STRB rps,[r10] ;r6502_ps

  ;LDR r11,=r6502_pc
;  ADD rpc,r2,r3,LSL#8 ;r6502_pc=nlo+(nhi<<8)
  ;STR rpc,[r11]

