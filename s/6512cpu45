|r6512opcode58|
  ;CLI
  ;ANDS r0,rps,#IFLAG
  ;BEQ r6502opcode58end

  ;STMFD sp!,{lr}
  ;BL r6502saveregs
  ;BL updatetimers
  ;BL r6502loadregs
  ;LDMFD sp!,{pc}

;r6502opcode58cli
  AND rps,rps,#NOTIFLAG

  CPU_CYCLES 2

  LDR r11,=beebit_irq
  LDR r2,[r11]
  CMP r2,#0
  ;BEQ r6502opcode58end
  BEQ r6512opcode58end2

  ;STMFD sp!,{lr}
  STR lr,[sp, #-4]!
  BL r6512saveregs
  BL updatetimers
  BL r6512loadregs
  ;LDMFD sp!,{lr}
  LDR lr, [sp], #4

r6512opcode58end
  LDR r11,=r6502_cyclesstored
  STR rcycles,[r11]
  MOV rcycles,#1

r6512opcode58end2
  R6512NEXTOPCODE

