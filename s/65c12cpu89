  GET h.6502zmaps

  GET h.6502cmaps

  GET h.6502cpus

; Use the GET directive to include register definitions as if typed here

  GET h.RegNames

; Area name C$$code advisable as wanted to link with C output

  AREA |C$$code|, CODE, READONLY

; Import global symbols

  IMPORT |r6502nobranch|
  IMPORT |r65c12branch|

; Export global symbols

  EXPORT |r65c12braroutine|
  EXPORT |r65c12bccroutine|

|r65c12braroutine|
  R6502_OPCODE_PUSH
  R65C12_BRANCH_ALWAYS_OPCODE_RETURN

|r65c12bccroutine|
  R6502_OPCODE_PUSH
  R65C12_BRANCH_IF_CLEAR_OPCODE_RETURN CFLAG


;Data Area

;  AREA    |C$$data|, DATA

  END
