  CPU_CYCLES 3
  ;LDMFD sp!,{r0-r2,rps-r12,pc}
  ;MOV pc,lr
  R65C12NEXTOPCODE

|r65c12opcode87|
  ;SAX
  ;STMFD sp!,{r0-r2,ra,rx,rpc-r12,lr}
  ADDRESSOFZEROPAGE_M r0
  ;LDR r11,=r6502_a
