  GET h.6502zmaps

  GET h.6502cmaps

  GET h.6502cpus

; Use the GET directive to include register definitions as if typed here

  GET h.RegNames

; Area name C$$code advisable as wanted to link with C output

  AREA |C$$code|, CODE, READONLY

; Import global symbols

  IMPORT |logcycles|
  IMPORT |logstartofcycles|
  IMPORT |logendofcycles|

  IMPORT |r6502opcodeinterruptfetchreturn|
  IMPORT |s2_r6502storeabs_p1|
  IMPORT |s1_r6502storeabs_p1|
  IMPORT |s_r6502storeabs_p1|
  IMPORT |s2_r6502storeabs_u1p2|
  IMPORT |s1_r6502storeabs_u1p2|
  IMPORT |s_r6502storeabs_u1p2|
  IMPORT |s2_r6502storeabs_p3|
  IMPORT |s1_r6502storeabs_p3|
  IMPORT |s_r6502storeabs_p3|
  IMPORT |r6502nobranch|
  IMPORT |r65c12branch|
  IMPORT |s2_r6502interruptfetch_u1p|
  IMPORT |s1_r6502interruptfetch_u1p|
  IMPORT |s_r6502interruptfetch_u1p|

; Export global symbols

  EXPORT |r65c12braroutine|
  EXPORT |r65c12bccroutine|
  EXPORT |r65c12stzabsroutine|

|r65c12braroutine|
  R6502_OPCODE_PUSH
  R65C12_BRANCH_ALWAYS_OPCODE_RETURN

|r65c12bccroutine|
  R6502_OPCODE_PUSH
  R65C12_BRANCH_IF_CLEAR_OPCODE_RETURN CFLAG

|r65c12stzabsroutine|
  R6502_OPCODE_PUSH
  MOV r5,#0
  R6502_STORE_ABS_OPCODE_RETURN


;Data Area

;  AREA    |C$$data|, DATA

  END
