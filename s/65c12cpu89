  CPU_CYCLES 3
  ;LDMFD sp!,{r0-r2,ra,rx,rpc-r12,pc}
  ;MOV pc,lr
  R65C12NEXTOPCODE

|r65c12opcode88|
  ;STMFD sp!,{r0-r2,rps-r12,lr}
  ;LDR r12,=r6502_y
