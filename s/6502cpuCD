  R6502_LINEAR_MODIFY_ABSX_OPCODE_START r6502dcp
  DCP_ACTION
  R6502_LINEAR_MODIFY_ABS_OPCODE_FINISH

|r6502dcp|
  DCP_ACTION
  MOV pc,lr

|r6502dec|
  DEC_ACTION
  MOV pc,lr


