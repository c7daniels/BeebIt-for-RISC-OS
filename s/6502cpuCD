  EXPORT |r6502dcp|
  EXPORT |r6502dec|

  MACRO
  DCP_ACTION
  LDR r1,[r0,#:INDEX:R6502_A_SHIFT]
  SUB r3,r4,#1
  BIC r8,r8,#NFLAG|ZFLAG|CFLAG
  SUBS r1,r1,r3,LSL #24
  AND r4,r3,#&FF
  ORRMI r8,r8,#NFLAG
  ORREQ r8,r8,#ZFLAG
  ORRCS r8,r8,#CFLAG
  MEND

  MACRO
  DEC_ACTION
  SUB r4,r4,#1
  BIC r8,r8,#NFLAG|ZFLAG
  MOVS r3,r4,LSL #24
  ORRMI r8,r8,#NFLAG
  ORREQ r8,r8,#ZFLAG
  MEND

  MACRO
  INY_ACTION
  LDR r2,[r0,#:INDEX:R6502_Y_SHIFT]
  BIC r8,r8,#NFLAG|ZFLAG
  ADDS r2,r2,#1:SHL:24
  ORRMI r8,r8,#NFLAG
  STR r2,[r0,#:INDEX:R6502_Y_SHIFT]
  ORREQ r8,r8,#ZFLAG
  MEND

  MACRO
  DEX_ACTION
  LDR r2,[r0,#:INDEX:R6502_X_SHIFT]
  BIC r8,r8,#NFLAG|ZFLAG
  SUBS r2,r2,#1:SHL:24
  ORRMI r8,r8,#NFLAG
  STR r2,[r0,#:INDEX:R6502_X_SHIFT]
  ORREQ r8,r8,#ZFLAG
  MEND

|r6502dcppreindexedroutine|
  R6502_OPCODE_PUSH
  R6502_LINEAR_MODIFY_PREINDEXED_OPCODE_START r6502dcp
  DCP_ACTION
  R6502_LINEAR_MODIFY_PREINDEXED_OPCODE_FINISH

|r6502deczpgroutine|
  R6502_OPCODE_PUSH
  R6502_MODIFY_ZPG_OPCODE_START
  DEC_ACTION
  R6502_MODIFY_ZPG_OPCODE_FINISH

|r6502dcpzpgroutine|
  R6502_OPCODE_PUSH
  R6502_MODIFY_ZPG_OPCODE_START
  DCP_ACTION
  R6502_MODIFY_ZPG_OPCODE_FINISH

|r6502inyroutine|
  R6502_OPCODE_PUSH
  INY_ACTION
  R6502_IMPLIED_OPCODE_RETURN

|r6502dexroutine|
  R6502_OPCODE_PUSH
  DEX_ACTION
  R6502_IMPLIED_OPCODE_RETURN

|r6502decabsroutine|
  R6502_OPCODE_PUSH
  R6502_LINEAR_MODIFY_ABS_OPCODE_START r6502dec
  DEC_ACTION
  R6502_LINEAR_MODIFY_ABS_OPCODE_FINISH

|r6502dcpabsroutine|
  R6502_OPCODE_PUSH
  R6502_LINEAR_MODIFY_ABS_OPCODE_START r6502dcp
  DCP_ACTION
  R6502_LINEAR_MODIFY_ABS_OPCODE_FINISH

|r6502bneroutine|
  R6502_OPCODE_PUSH
  R6502_BRANCH_IF_CLEAR_OPCODE_RETURN ZFLAG

|r6502dcppostindexedroutine|
  R6502_OPCODE_PUSH
  R6502_LINEAR_MODIFY_POSTINDEXED_OPCODE_START r6502dcp
  DCP_ACTION
  R6502_LINEAR_MODIFY_PREINDEXED_OPCODE_FINISH

|r6502deczpgxroutine|
  R6502_OPCODE_PUSH
  R6502_MODIFY_ZPGX_OPCODE_START
