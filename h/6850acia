#define PARITY_NONE 0
#define PARITY_ODD 1
#define PARITY_EVEN 2

extern int m6850_bits, m6850_parity, m6850_stop;

extern char uef_buffer[0xFF];

extern void aciareset(void);
extern HOSTMAP* aciapoll(HOSTMAP* hmap);
extern void aciaresettimer(void);
extern struct R6502CPUMAP* acia00read(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* acia01read(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* acia00write(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern struct R6502CPUMAP* acia01write(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern struct R6502CPUMAP* serialularead(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* serialulawrite(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern int uefvalidate(FILE *hfile);
extern int uefopen(void);
extern void uefclose(void);
extern void uefrewind(void);
