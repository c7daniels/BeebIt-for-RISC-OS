#define PARITY_NONE 0
#define PARITY_ODD 1
#define PARITY_EVEN 2

extern int m6850_bits, m6850_parity, m6850_stop;
extern int m6850_timerreset;

extern char uef_buffer[0xFF];

extern void aciareset(void);
extern HOSTMAP* aciapoll(HOSTMAP* hmap);
extern void aciaresettimer(void);
extern HOSTMAP* acia00read(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* acia01read(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* acia00write(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* acia01write(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* serialularead(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* serialulawrite(HOSTMAP* hmap, uintptr_t address_code);
extern int uefvalidate(FILE *hfile);
extern int uefopen(void);
extern void uefclose(void);
extern void uefrewind(void);
