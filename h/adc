/*analog to digital converter*/
extern void adcreset(void);
extern void adcenter(void);
extern void adcmodevars(void);
extern HOSTMAP* adcpoll(HOSTMAP* hmap);
extern struct R6502CPUMAP* adc00read(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* adc01read(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* adc02read(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* adcwrite(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
