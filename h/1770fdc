#define DFS_SECTORS_PER_TRACK 10
#define DFS_SECTOR_SIZE 256
#define ADFS_SECTORS_PER_TRACK 16
#define ADFS_SECTOR_SIZE 256

#define ADFS_MASK 0x10
#define DFS_NONE 0 /*no disc image*/
#define DFS_SSD 1 /*single sided*/
#define DFS_DSD_TRACK 2 /*double sided, track interleave*/
#define DFS_DSD_SIDE 3 /*double sided, side interleave*/
#define ADFS_NON_INTERLEAVED 0x10 /*non interleaved*/
#define ADFS_INTERLEAVED 0x11 /*interleaved*/

extern void w1770reset(void);
extern int w1770getsectorcount(FILE *hfile);
extern int w1770getimagetype(FILE *hfile, int nsectorcount);
extern HOSTMAP* w1770poll(HOSTMAP* hmap);
extern HOSTMAP* w1770controlread(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770controlwrite_bp(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770controlwrite_m(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770statusread(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770trackread(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770sectorread(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770dataread(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770commandwrite(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770trackwrite(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770sectorwrite(HOSTMAP* hmap, uintptr_t address_code);
extern HOSTMAP* w1770datawrite(HOSTMAP* hmap, uintptr_t address_code);
