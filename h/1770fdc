#define DFS_SECTORS_PER_TRACK 10
#define DFS_SECTOR_SIZE 256
#define ADFS_SECTORS_PER_TRACK 16
#define ADFS_SECTOR_SIZE 256

#define ADFS_MASK 0x10
#define DFS_NONE 0 /*no disc image*/
#define DFS_SSD 1 /*single sided*/
#define DFS_DSD_TRACK 2 /*double sided, track interleave*/
#define DFS_DSD_SIDE 3 /*double sided, side interleave*/
#define ADFS_NON_INTERLEAVED 0x10 /*non interleaved*/
#define ADFS_INTERLEAVED 0x11 /*interleaved*/

extern void w1770reset(void);
extern int w1770getsectorcount(FILE *hfile);
extern int w1770getimagetype(FILE *hfile, int nsectorcount);
extern HOSTMAP* w1770poll(HOSTMAP* hmap);
extern struct R6502CPUMAP* w1770controlread(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* w1770controlwrite_bp(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern struct R6502CPUMAP* w1770controlwrite_m(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern struct R6502CPUMAP* w1770statusread(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* w1770trackread(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* w1770sectorread(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* w1770dataread(struct R6502CPUMAP* cmap, uintptr_t address_code);
extern struct R6502CPUMAP* w1770commandwrite(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern struct R6502CPUMAP* w1770trackwrite(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern struct R6502CPUMAP* w1770sectorwrite(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
extern struct R6502CPUMAP* w1770datawrite(struct R6502CPUMAP* cmap, uintptr_t address_code, uint8_t value);
