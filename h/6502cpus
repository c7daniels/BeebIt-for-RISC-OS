  ORR r1,r1,#ADDRESSING_BASEFLAG:SHL:8
  LDR r2,[r3,r4,LSR #24]
  ADD r4,r4,#1:SHL:24
  ADDS r1,r1,r2,LSL #24
  LDR r2,[r3,r4,LSR #24]
  MOV r1,r1,LSR #8
  ORR r6,r1,r2,LSL #24
  BCC %F1
  R6502_READ_BRANCH_WITH_LINK r6502linearmodifypostindexedoutofpage_u3p3l,$a
