  MEND

  MACRO
  R6502_OPCODE_RETURN
  R6502_OPCODE_POP
  [ Optimise6502Links
  LDR pc, [r1], #4
  |
  STR r1,[r0,#:INDEX:R6502_CPU_STATE]
  MOV pc,lr
  ]
  MEND

